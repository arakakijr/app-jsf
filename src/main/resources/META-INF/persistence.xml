<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="meuprimeiroprojetojsf">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>org.example.appjsf.entities.Pessoa</class>
        <class>org.example.appjsf.entities.Lancamento</class>
        <class>org.example.appjsf.entities.Estados</class>
        <class>org.example.appjsf.entities.Cidades</class>
        <class>org.example.appjsf.entities.Aluno</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/jsf_banco"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres" />
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />


        </properties>
    </persistence-unit>
</persistence>
